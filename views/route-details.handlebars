<div class="container">
    <div class="row">
        <!-- Route Details -->
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">{{route.from}} to {{route.to}}</h5>
                    <p>Distance: {{route.distance}} km</p>
                    <p>Duration: {{route.duration}}</p>
                </div>
            </div>

            <!-- Date and Time Selection -->
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Select Travel Date & Time</h5>
                    <div class="mb-3">
                        <label class="form-label">Travel Date</label>
                        <input type="date" class="form-control" id="travelDate" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Departure Time</label>
                        <select class="form-control" id="departureTime" required>
                            <option value="">Select a date first</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- Price Calculator -->
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Price Calculator</h5>
                    <div id="priceBreakdown">
                        <p>Selected VIP Seats: <span id="vipCount">0</span> (KES <span id="vipTotal">0</span>)</p>
                        <p>Selected Regular Seats: <span id="regularCount">0</span> (KES <span id="regularTotal">0</span>)</p>
                        <h6>Total: KES <span id="totalPrice">0</span></h6>
                    </div>
                </div>
            </div>

            <!-- Payment Notice -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="alert alert-info payment-notice mb-0">
                        <i class="fas fa-info-circle"></i>
                        <strong>Payment Information:</strong>
                        <ul class="mb-0 mt-2">
                            <li>Payment is in cash only, collected when boarding the bus</li>
                            <li>Please arrive 30 minutes before departure</li>
                            <li>Your seat reservation is held for 30 minutes before departure</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Seat Map -->
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Select Seats</h5>
                    <div class="seat-map" id="seatMap"></div>
                    <div id="selectedSeatsDisplay" class="mt-3"></div>
                    <div class="seat-legend mt-3">
                        <div class="seat-type">
                            <div class="seat regular">
                                <span class="seat-number">R</span>
                            </div>
                            <span>Regular</span>
                        </div>
                        <div class="seat-type">
                            <div class="seat vip">
                                <span class="seat-number">V</span>
                            </div>
                            <span>VIP</span>
                        </div>
                        <div class="seat-type">
                            <div class="seat booked">
                                <span class="seat-number">B</span>
                            </div>
                            <span>Booked</span>
                        </div>
                        <div class="seat-type">
                            <div class="seat selected">
                                <span class="seat-number">S</span>
                            </div>
                            <span>Selected</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Booking Form -->
    {{> booking-form}}
</div>

<script>
    const routeData = {
        ...{{{routeJSON}}},
        rules: {
            maxSeatsPerBooking: {{businessRules.maxSeatsPerBooking}},
            minBookingHours: {{businessRules.minBookingHours}}
        }
    };
</script> 